<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ProgerTheme">
        <item name="android:buttonStyle">@style/ProgerTheme.Button</item>
    </style>

    <style name="ProgerTheme.Button">
        <item name="android:background">@drawable/proger_button_drawable</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="HackerTheme">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/red</item>

        <item name="android:background">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/green</item>
        <item name="android:textColorPrimaryInverse">@color/green_dark</item>
        <item name="android:textColorSecondary">@color/green_dark</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/green</item>
        <item name="android:colorForeground">@color/black</item>
        <item name="android:textViewStyle">@style/HackerTheme.TextView</item>
        <item name="android:buttonStyle">@style/HackerTheme.Button</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="HackerTheme.TextView">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="HackerTheme.Button">
        <item name="android:background">@drawable/console_button_drawable</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
